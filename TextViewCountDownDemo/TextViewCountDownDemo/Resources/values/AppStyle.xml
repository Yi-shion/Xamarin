<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="AppBackgroundTheme" parent="android:style/Theme">
    <item name="android:windowBackground">@color/AppBackground</item>
    <item name="android:windowTitleSize">48dip</item>
    <item name="android:windowTitleBackgroundStyle">@style/TitleBar</item>
  </style>
  <style name="TitleBar">
    <item name="android:background">@color/TitleBarColor</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="AppBackgroundThemeNoTitle" parent="@style/AppBackgroundTheme">
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="AppBackgroundThemeNoTitleSplash" parent="@style/AppBackgroundTheme">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@color/SplashColor</item>
  </style>

  <style name="dialog" >
     <item name="android:width">100dp</item>
  </style>

  <!--登入框-->
  <style name="LoginEditBoxStyle">
    <item name="android:textSize">@dimen/loginTextSize</item>
    <item name="android:textColorHint">@color/HintColor</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:paddingLeft">@dimen/loginPaddingLeft</item>
    <item name="android:layout_height">@dimen/formHeight</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <!--登入按鈕-->
  <style name="LoginButton">
    <item name="android:layout_width">146.3dip</item>
    <item name="android:layout_height">44.3dip</item>
    <item name="android:textColor">@android:color/background_light</item>
    <item name="android:textSize">@dimen/font34px</item>
  </style>

  <!--注册页面显示/隐藏密码小按钮-->
  <style name="ShowPwdButton">
    <item name="android:layout_width">40dip</item>
    <item name="android:layout_height">28dip</item>
    <item name="android:textSize">@dimen/font20px</item>
  </style>
  
  <!--註冊框-->
  <style name="RegInputLiner">
    <item name="android:layout_height">@dimen/formHeight</item>
    <item name="android:layout_marginLeft">16.5dip</item>
  </style>

  <!--註冊間格線-->
  <style name="RegLine">
    <item name="android:layout_marginLeft">12.65dip</item>
    <item name="android:layout_marginRight">12.65dip</item>
    <item name="android:background">@color/FormLineColor</item>
  </style>

  <!--註冊輸入框-->
  <style name="RegEditBoxStyle">
    <item name="android:textSize">@dimen/font24px</item>
    <item name="android:textColorHint">@color/FormHeaderTextColor</item>
    <item name="android:textColor">@android:color/background_dark</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:paddingLeft">10dip</item>
  </style>

  <!--註冊完成資訊-->
  <style name="RegDoneInfoText">
    <item name="android:textSize">@dimen/font28px</item>
    <item name="android:textColor">@android:color/background_dark</item>
  </style>

  <!--表單Header文字-->
  <style name="FormHeader">
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/FormHeaderTextColor</item>
    <item name="android:textSize">@dimen/font28px</item>
  </style>

  <!--表單Header文字 身份认证-->
  <style name="AutFormHeader">
    <item name="android:gravity">center</item>
    <item name="android:textColor">#000000</item>
    <item name="android:textSize">@dimen/font24px</item>
  </style>
  
  
  <!--表單Header文字 身份认证-->
  <style name="AutFormEditBox">
    <item name="android:gravity">center</item>
    <item name="android:textColor">@android:color/background_dark</item>
    <item name="android:textSize">@dimen/font24px</item>
  </style>
  <style name="AutEditBoxStyle">
    <item name="android:textSize">@dimen/font24px</item>
    <item name="android:textColorHint">@color/BorderColor</item>
    <item name="android:textColor">@android:color/background_dark</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:paddingLeft">19.8dip</item>
  </style>
  
</resources>